<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<welcome-file-list>
		<welcome-file>/index.jsp</welcome-file>
	</welcome-file-list>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>loginservlet</servlet-name>
		<servlet-class>com.web.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>loginservlet</servlet-name>
		<url-pattern>/loginservlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>filmservlet</servlet-name>
		<servlet-class>com.web.servlet.FilmServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>filmservlet</servlet-name>
		<url-pattern>/user/allfilm</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>languageservlet</servlet-name>
		<servlet-class>com.web.servlet.AllLanguageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>languageservlet</servlet-name>
		<url-pattern>/user/alllanguage</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>addfilmservlet</servlet-name>
		<servlet-class>com.web.servlet.AddFilmServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>addfilmservlet</servlet-name>
		<url-pattern>/user/addfilm</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>deletefilmservlet</servlet-name>
		<servlet-class>com.web.servlet.DeleteFilmServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deletefilmservlet</servlet-name>
		<url-pattern>/user/deletefilm</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>editfilmservlet</servlet-name>
		<servlet-class>com.web.servlet.EditFilmServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>editfilmservlet</servlet-name>
		<url-pattern>/user/editfilm</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>modifyservlet</servlet-name>
		<servlet-class>com.web.servlet.ModifyServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>modifyservlet</servlet-name>
		<url-pattern>/user/modifyfilm</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>encoding</filter-name>
		<filter-class>com.web.fiter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>session</filter-name>
		<filter-class>com.web.fiter.SessionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>session</filter-name>
		<url-pattern>/user/*</url-pattern>
	</filter-mapping>
</web-app>
